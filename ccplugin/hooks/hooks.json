{
  "description": "LongMemory hooks — auto-save on stop, memory backup before compaction",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/auto-save-memory.sh\" 2>/dev/null || pwsh -NoProfile -ExecutionPolicy Bypass -File \"${CLAUDE_PLUGIN_ROOT}/scripts/auto-save-memory.ps1\"",
            "timeout": 10,
            "statusMessage": "LongMemory: 检测 git 变更..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/pre-compact.sh\" 2>/dev/null || pwsh -NoProfile -ExecutionPolicy Bypass -File \"${CLAUDE_PLUGIN_ROOT}/scripts/pre-compact.ps1\"",
            "timeout": 10,
            "statusMessage": "LongMemory: 压缩前备份记忆..."
          }
        ]
      }
    ]
  }
}
