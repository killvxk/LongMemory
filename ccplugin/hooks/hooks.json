        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/auto-save-memory.sh\" 2>/dev/null || pwsh -NoProfile -ExecutionPolicy Bypass -File \"${CLAUDE_PLUGIN_ROOT}/scripts/auto-save-memory.ps1\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
